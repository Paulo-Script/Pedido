<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".DashbordActivity">

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="442dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/bt_clientes"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="370dp"
            android:layout_height="71dp"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_action_reg"
            android:text="Cliente" />

        <Button
            android:id="@+id/bt_produtos"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="370dp"
            android:layout_height="71dp"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_action_item"
            android:text="Produto" />

        <Button
            android:id="@+id/bt_addItens"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="370dp"
            android:layout_height="71dp"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/ic_action_ped"
            android:text="Pedido" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
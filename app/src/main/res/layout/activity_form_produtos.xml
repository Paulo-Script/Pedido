<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".FormProdutos">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Código do Produto"
                android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_CodigoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tcDescricao"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Descrição"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_DescricaoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvQuantidae"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Quantidade"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_QuantidadeProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:numeric="integer"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvPreco"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Preço"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_precoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_IncaltProduto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:drawableLeft="@drawable/ic_action_adicionar"
            android:text="Cadastrar" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".FormHeadPedidos">


    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="728dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_clientes"
            android:layout_width="330dp"
            android:layout_height="46dp"
            android:scrollbarSize="6dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Forma de Pagamento"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_formpg"
            android:layout_width="332dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"/>

        <Button
            android:id="@+id/bt_incalt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:drawableLeft="@drawable/ic_action_adicionar"
            android:background="@drawable/btn_uno"
            android:drawablePadding="-50dp"
            android:paddingLeft="100dp"
            android:paddingTop="1sp"
            android:textColor="@drawable/txt_btn_uno"
            android:text="Cadastrar Pedido" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>